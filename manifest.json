{
  "manifest_version": 3,
  "name": "AI Summarizer",
  "version": "1.0.0",
  "action": {
    "default_title": "AI Summarizer",
    "default_popup": "popup.html"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "clipboardWrite",
    "tabs",
    "storage"
  ],
  "host_permissions": ["https://api.openai.com/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "images/logo2.png",
    "32": "images/logo2.png",
    "48": "images/logo2.png",
    "128": "images/logo2.png"
  }
}
